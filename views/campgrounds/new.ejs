<% layout("layouts/boilerplate") %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-md-6 offset-3">
            <form action="/campgrounds" method="POST" class="validated-form" enctype="multipart/form-data" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="title" novalidate>Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" required />
                    <div class="valid-feedback">Ready for submission</div>
                    <div class="invalid-feedback">Please add data</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="title">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" required />
                    <div class="valid-feedback">Ready for submission</div>
                    <div class="invalid-feedback">Please add data</div>
                </div>
                <div class="mb-3 ">
                    <label class="form-label " for="price ">Campground Price</label>
                    <div class="input-group ">
                        <span class="input-group-text " id=" ">$</span>
                        <input type="text " class="form-control " id="price " placeholder="0.00 " required name="campground[price]" aria-describedby="price-label " />
                        <div class="valid-feedback ">Ready for submission</div>
                        <div class="invalid-feedback ">Please add data</div>
                    </div>
                </div>
                <div class="mb-3 ">
                    <label class="form-label " for="Description ">Description</label>
                    <textarea class="form-control " type="text " name="campground[description]" required id="description "></textarea>
                    <div class="valid-feedback ">Ready for submission</div>
                    <div class="invalid-feedback ">Please add data</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Select images</label>
                    <input class="form-control custom-file-input" type="file" id="image" name="image" multiple>
                </div>

                <div class="mb-3 ">
                    <button class="btn btn-success ">Add Campground</button>
                </div>
                <a href="/campgrounds ">All</a>
            </form>
        </div>
    </div>